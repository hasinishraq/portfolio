---
import { siteConfig } from "../config";

const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
const hasTechStack = siteConfig.techStack && siteConfig.techStack.length > 0;
const hasExperience = siteConfig.experience && siteConfig.experience.length > 0;
const hasEducation = siteConfig.education && siteConfig.education.length > 0;
const currentPath = Astro.url.pathname;
const isHome = currentPath === "/";
const isPlaygroundPage = currentPath?.startsWith("/algorithm-playground");
const sectionHref = (section: string) => (isHome ? `#${section}` : `/#${section}`);
const homeHref = isHome ? "#" : "/";
const baseNavItems = [
  { label: "Home", href: homeHref, show: true },
  { label: "About", href: sectionHref("about"), show: true },
  { label: "Tech & Stack", href: sectionHref("tech-stack"), show: hasTechStack },
  { label: "Projects", href: sectionHref("projects"), show: hasProjects },
  { label: "Experience", href: sectionHref("experience"), show: hasExperience },
  { label: "Education", href: sectionHref("education"), show: hasEducation },
  { label: "Playground", href: "/algorithm-playground", show: true },
];
const playgroundNavItems = [
  { label: "Overview", href: "#playground-top", show: true },
  { label: "Sorting", href: "#sorting", show: true },
  { label: "Pathfinding", href: "#pathfinding", show: true },
  { label: "Tree & Graph", href: "#tree-graph", show: true },
  { label: "Portfolio", href: "/", show: true },
];
const navItems = (isPlaygroundPage ? playgroundNavItems : baseNavItems).filter((item) => item.show);
const headerThemeClasses = isPlaygroundPage
  ? "bg-slate-950/60 supports-[backdrop-filter]:bg-slate-950/40 text-white"
  : "bg-white/90 supports-[backdrop-filter]:bg-white/60 text-gray-900";
const desktopLinkClasses = isPlaygroundPage
  ? "text-slate-200 hover:text-white"
  : "text-gray-700 hover:text-black";
const mobileLinkClasses = isPlaygroundPage
  ? "text-slate-200 hover:text-white"
  : "text-gray-700 hover:text-black";
const menuButtonClasses = isPlaygroundPage
  ? "text-slate-200 hover:text-white hover:bg-white/10"
  : "text-gray-700 hover:text-black hover:bg-gray-100";
const mobileBorderClass = isPlaygroundPage ? "border-white/10" : "border-gray-200";
const scrollClass = isPlaygroundPage ? "bg-slate-950/80 shadow-lg" : "bg-white/80 shadow";
---

<header
  id="header"
  class={`fixed top-0 left-0 right-0 z-50 backdrop-blur transition-all duration-300 ${headerThemeClasses}`}
  data-scroll-class={scrollClass}
  data-scroll-blur="backdrop-blur-sm"
>
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <div class="flex items-center justify-between md:justify-center">
      <a
        href={homeHref}
        class={`text-lg font-semibold tracking-tight md:hidden ${isPlaygroundPage ? "text-white" : "text-gray-900"}`}
      >
        {siteConfig.name}
      </a>
      <button
        id="mobile-nav-toggle"
        class={`md:hidden inline-flex items-center justify-center p-2 rounded-md focus:outline-none ${menuButtonClasses}`}
        aria-controls="mobile-nav"
        aria-expanded="false"
      >
        <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>

    <ul class="hidden md:flex items-center gap-8 justify-center mt-4 md:mt-0">
      {navItems.map((item) => (
        <li>
          <a href={item.href} class={`transition-colors font-medium ${desktopLinkClasses}`}>
            {item.label}
          </a>
        </li>
      ))}
    </ul>

    <div id="mobile-nav" class={`md:hidden hidden flex-col gap-4 mt-4 border-t pt-4 ${mobileBorderClass}`}>
      {navItems.map((item) => (
        <a
          href={item.href}
          class={`block text-base font-medium transition-colors ${mobileLinkClasses}`}
          data-mobile-nav-link
        >
          {item.label}
        </a>
      ))}
    </div>
  </nav>
</header>

<script>
  const toggle = document.getElementById("mobile-nav-toggle");
  const mobileNav = document.getElementById("mobile-nav");

  toggle?.addEventListener("click", () => {
    const isExpanded = toggle.getAttribute("aria-expanded") === "true";
    toggle.setAttribute("aria-expanded", (!isExpanded).toString());
    mobileNav?.classList.toggle("hidden");
  });

  mobileNav?.querySelectorAll("[data-mobile-nav-link]").forEach((link) => {
    link.addEventListener("click", () => {
      mobileNav.classList.add("hidden");
      toggle?.setAttribute("aria-expanded", "false");
    });
  });

  window.addEventListener("scroll", () => {
    const header = document.getElementById("header");
    if (!header) return;
    const scrollClasses = header.dataset.scrollClass?.split(" ").filter(Boolean) ?? [];
    const blurClass = header.dataset.scrollBlur;
    if (window.scrollY > 100) {
      scrollClasses.forEach((cls) => header.classList.add(cls));
      if (blurClass) header.classList.add(blurClass);
    } else {
      scrollClasses.forEach((cls) => header.classList.remove(cls));
      if (blurClass) header.classList.remove(blurClass);
    }
  });
</script>

<style>
  html {
    scroll-behavior: smooth;
  }
</style>
